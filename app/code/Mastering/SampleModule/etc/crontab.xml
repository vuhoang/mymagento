<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="masteringAddItem" instance="Mastering\SampleModule\Cron\AddItem" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="masteringSayHello" instance="Mastering\SampleModule\Cron\AddItem" method="logHello">
            <schedule>*/10 * * * *</schedule>
        </job>
        <job name="masteringSayHelloExt" instance="Mastering\SampleModule\Cron\AddItem" method="logHello">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>
